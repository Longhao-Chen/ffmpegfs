#!/bin/bash

. "${BASH_SOURCE%/*}/funcs.sh" "$1"

hash_image() {
    python <<END
import hashlib, mutagen
file = mutagen.File('$1')
artwork = file.tags['APIC:'].data
print hashlib.sha1(artwork).hexdigest()
END
}

echo Checking ${DIRNAME}/raven_e.${FILEEXT}
[ "$(hash_image "${DIRNAME}/raven_e.${FILEEXT}")" = 794865299f4fac10ba5719b203f0c71b5b524e95 ]
echo "Pass"

echo Checking ${DIRNAME}/raven_d.${FILEEXT}
[ "$(hash_image "${DIRNAME}/raven_d.${FILEEXT}")" = 5cd44d9e64c90d137ed3614213e309afec060dbc ]
echo "Pass"

echo "OK"
